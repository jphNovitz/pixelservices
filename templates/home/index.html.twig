{% extends 'base.html.twig' %}

{% block title %}Cr√©ons ensemble votre site internet | pixelservices{% endblock %}

{% block body %}


<div class="w-full  P-12 flex justify-center items-center" id="message-form">
  <div class="w-3/4 md:w-1/2 pt-12">
  {{form_start(form)}}
      <div class="mt-6 mb-3">
        {{form_label(form.name, null, {'label_attr': {'class': 'class="block text-sm font-medium text-gray-700 mt-6 mb-3'}})}}
        {{form_widget(form.name, {'attr': {'class': 'block w-full rounded-md border-gray-300 pl-7 pr-12 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}})}}
      </div>

      <div class="mt-6 mb-3">
        {{form_label(form.email, null, {'label_attr': {'class': 'class="block text-sm font-medium text-gray-700'}})}}
        {{form_widget(form.email, {'attr': {'class': 'block w-full rounded-md border-gray-300 pl-7 pr-12 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}})}}
      </div>

      <div class="mt-6 mb-3">
        {{form_label(form.text, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}})}}
        {{form_widget(form.text, {'attr': {
          'rows': '8', 
          'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}})}}
      </div>

      <div class="mt-6 mb-3">
      {{form_widget(form.save, {'attr': {'class': 'inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2'}})}}
      </div>
    </div>
    {% do form.seen.setRendered %}
    {{form_end(form)}}
  </div>
</div>




{% endblock %}
