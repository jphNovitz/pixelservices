{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}

    <div class="grid gap-4 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
        <!-- Boucle pour afficher chaque news dans un petit bloc -->
        {% for post in posts %}
        <article class="bg-white rounded-lg shadow-md p-6 flex flex-col justify-between">
            <div>
                <h2 class="text-xl font-bold mb-2">{{ post.title }}</h2>
                <p class="text-gray-600 mb-4">{{ post.summary|raw }}</p>
            </div>
            {{ component('Button', {
                href: path('app_blog_show', {'slug' :  post.slug}),
                label: 'Lire plus'
            }) }}

        </article>
        {% endfor %}
    </div>
{% endblock %}
